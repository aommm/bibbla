<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- User's full name -->
    <TextView android:id="@+id/name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="@android:color/background_light"/>
    
    <!-- Debt and log-out button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView android:id="@+id/debt_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        	android:gravity="center"
            android:text="@string/debt_view_text"/>
        
        <Button android:id="@+id/logout_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/logout_text"/>
    </LinearLayout>
    
    <!-- My loans -->
    <TextView android:id="@+id/loansHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:text="@string/my_loans_header"/>
    
    <ListView android:id="@+id/loansList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    
    <!-- My reservations -->
    <TextView
        android:id="@+id/reservationsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:text="@string/my_reservations_header"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ListView android:id="@+id/reservationsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
	
</LinearLayout>