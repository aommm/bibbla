<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.gotlib.bibbla"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="se.gotlib.bibbla.backend.singletons.Singletons" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gotlib.bibbla.activities.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="se.gotlib.bibbla.activities.ReservationsActivity"
            android:label="@string/title_activity_reservations">
        </activity>
        <activity
            android:name="se.gotlib.bibbla.activities.LoansActivity"
            android:label="@string/title_activity_loans">
        </activity>
        <activity
            android:name="se.gotlib.bibbla.activities.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
    </application>

</manifest>
