<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="main_menu_button">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Incorrect credentials error message -->
    <style name="error_text">
        <item name="android:background">@color/error_background</item>
        <item name="android:textColor">@color/error_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Logged in/out indicator on main screen -->
    <style name="logged_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="logged_out_button" parent="logged_button">
        <item name="android:background">@color/logged_out_background</item>
        <item name="android:textColor">@color/logged_out_text</item>
        <item name="android:text">@string/not_logged_in</item>
        <!-- TODO: l채gg in fin bild h채r -->
        <!-- <item name="android:drawableLeft">@drawable/button_icon</item> -->
    </style>
    <style name="logged_in_button" parent="logged_button">
        <item name="android:background">@color/logged_in_background</item>
        <item name="android:textColor">@color/logged_in_text</item>
        <item name="android:text">@string/logged_in</item>
        <!-- TODO: l채gg in fin bild h채r -->
        <!-- <item name="android:drawableLeft">@drawable/button_icon</item> -->
    </style>


</resources>
